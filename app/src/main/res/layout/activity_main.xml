<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">-->
 <ImageView
     android:id="@+id/btnCalling"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_above="@+id/txtCall"
     android:onClick="Calling"
     android:src="@drawable/ic_call_black_24dp"
     android:textColor="@color/gray" />

    <TextView
        android:id="@+id/txtCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="5dp"
        android:text="Phone"
        android:textStyle="bold" />

 <ImageView
     android:id="@+id/btnMail"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_alignTop="@+id/btnCalling"
     android:layout_marginStart="146dp"
     android:onClick="Mail"
     android:src="@drawable/ic_email_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="150dp"
        android:text="Email"
        android:textStyle="bold" />

 <ImageView
     android:id="@+id/btnSMS"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:onClick="SendSMS"
     android:layout_alignParentEnd="true"
     android:layout_alignTop="@+id/btnCalling"
     android:src="@drawable/ic_textsms_black_24dp" />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/btnMail"
     android:text="Message"
     android:layout_alignParentEnd="true"
     android:textStyle="bold" />

 <Button
     android:id="@+id/btnWhatsapp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:onClick="Whatsapp"
     android:textColor="@color/blue"
     android:layout_marginTop="70dp"
     android:text="W/F" />

 <Button
     android:id="@+id/btnBrowser"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="149dp"
     android:text="Google"
     android:onClick="Google"
     android:textColor="@color/blue" />



